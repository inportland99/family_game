<h1>Points Earned</h1>

<table class="table table-striped table-condensed" >
  <tr>
    <th>User</th>
    <th>Activity</th>
    <th>Points</th>
    <th>Date Earned</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @points.each do |point| %>
  <tr>
    <td><%= point.user.name %></td>
    <td><%= point.activity.name %></td>
    <td><%= point.xp_earned %></td>
    <td><%= point.created_at.strftime("%b-%d-%Y") %></td>
    <td><%= link_to 'Show', point %></td>
    <td><%= link_to 'Edit', edit_point_path(point) %></td>
    <td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'Add Points', new_point_path, class: 'btn' %></p>
