<h1>Players</h1>

<table class="table table-striped table-condensed" >
  <tr>
    <th>Name</th>
    <th>Current Pts</th>
    <th>Total Earned</th>
    <th>Total Spent</th>
    <th></th>
    <!-- <th></th>
    <th></th> -->
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.xp - user.xp_used unless user.xp_used.nil? %></td>
    <td><%= user.xp %></td>
    <td><%= user.xp_used %></td>
    <td><%= link_to 'Show', user, class: 'btn btn-primary' %></td>
    <!-- <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
  </tr>
<% end %>
</table>

