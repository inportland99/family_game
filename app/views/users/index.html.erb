<h1>Parents</h1>

<table class="table table-striped table-condensed" >
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Admin</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.admin %></td>
    <td>
        <%= link_to 'Show', user, class: 'btn btn-primary btn-small' %> 
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-small' %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<p>
  <%= link_to 'New Parent', new_user_path, class: 'btn btn-success' %>
</p>

