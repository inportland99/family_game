<%= simple_form_for @points_spent, html: {class: "form-horizontal"} do |f| %>
  <div class="field">
     <% if params[:student_id] %>
      <h4>Add points for <%= @student.username %></h4>
      <%= f.hidden_field :student_id, value: params[:student_id] %>
    <% else %>
      <%= f.association :student, label_method: :username, :selected => params[:student] %><br />
    <%# f.label :user_id %>
    <%# f.number_field :user_id %>
    <% end %>
  </div>
  <div class="field">
    <%= f.association :reward, label_method: :name, :selected => params[:reward] %><br />
    <%# f.label :rewards_id %><br />
    <%# f.number_field :rewards_id %>
  </div>
  <div class="actions">
    <%= f.submit 'Spend Points Now', class: 'btn btn-danger' %>
  </div>
<% end %>
