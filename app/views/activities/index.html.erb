<h1>Activities</h1>

<table class="table table-striped table-condensed" >
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Points</th>
    <th></th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%= activity.name %></td>
    <td><%= activity.description %></td>
    <td><%= activity.activity_xp %></td>
    <td>
      <% if current_user && current_user.admin? %> 
        <%= link_to 'Edit', edit_activity_path(activity), class: 'btn btn-small' %>
      <% end %>
  </tr>
<% end %>
</table>

<p>
  <% if current_user && current_user.admin? %> 
    <%= link_to 'New Activity', new_activity_path, class: 'btn btn-success' %>
  <% end %>
</p>  
<br />

<h4>Archived Activities</h4>
<table class="table table-striped table-condensed" >
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Points</th>
    <th></th>
  </tr>

<% @archived.each do |activity| %>
  <tr>
    <td><%= activity.name %></td>
    <td><%= activity.description %></td>
    <td><%= activity.activity_xp %></td>
    <td>
      <% if current_user.role != "Player" %> 
        <%= link_to 'Edit', edit_activity_path(activity), class: 'btn btn-small' %>
      <% end %>
  </tr>
<% end %>
</table>